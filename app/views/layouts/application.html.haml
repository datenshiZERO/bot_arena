!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = display_meta_tags :site => "Tactics?!?", :reverse => true
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    = stylesheet_link_tag "application", :media => "all"
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
  %body
    .navbar.navbar-static-top.navbar-default
      .container
        .navbar-header
          %button.navbar-toggle{ "type" => "button", "data-toggle" => "collapse", "data-target" => ".navbar-collapse" }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Tactics?!?", root_url, :class => "navbar-brand"
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li{ :class => (((action_name == "index" || action_name == "dashboard") && controller_name == "pages") ? "active" : "") }= link_to "Home", root_url
            - if user_signed_in?
              %li{ :class => (controller_name == "units" ? "active" : "") }= link_to "Roster", units_url
              %li{ :class => (controller_name == "user_equipment" ? "active" : "") }= link_to "Armory", user_equipment_index_url
              %li.dropdown
                = link_to "Market <span class='caret'></span>".html_safe, "#", class: "dropdown-toggle #{(%w{quests raids}.include? controller_name) ? "active" : ""}", "data-toggle" => "dropdown" 
                %ul.dropdown-menu
                  %li= link_to "Units for Hire", unit_templates_url
                  %li= link_to "Item Store", equipment_index_url
              %li.dropdown
                = link_to "Quests <span class='caret'></span>".html_safe, "#", class: "dropdown-toggle #{(%w{quests raids}.include? controller_name) ? "active" : ""}", "data-toggle" => "dropdown" 
                %ul.dropdown-menu
                  %li= link_to "Quests List", quests_url
                  %li= link_to "Past Raids", raids_url
            %li.dropdown
              = link_to "Arenas <span class='caret'></span>".html_safe, "#", class: "dropdown-toggle", "data-toggle" => "dropdown" 
              %ul.dropdown-menu
                %li{ :class => (controller_name == "arenas" ? "active" : "") }= link_to "Arena List", arenas_url
                - if user_signed_in?
                  %li{ :class => ((action_name == "my_battles" && controller_name == "pages") ? "active" : "") }= link_to "Past Battles", my_battles_url
                %li{ :class => ((controller_name == "battles") ? "active" : "") }= link_to "All Battles", battles_url
            %li{ :class => (action_name == "help" ? "active" : "") }= link_to "Help", help_url
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li
                = link_to "#" do
                  %strong= current_user.username
                  &nbsp;
                  = "Lvl: #{current_user.current_level}"
                  = "(#{number_with_delimiter current_user.total_xp}/#{number_with_delimiter current_user.xp_for_next_level})"
                  &nbsp;
                  = "Gold: #{number_with_delimiter current_user.credits}"
              %li= link_to 'Sign out', logout_url, :method => :delete
            - else
              %li= link_to 'Sign up', new_user_registration_url
              %li= link_to 'Sign in', login_url


    .container.main-container
      - flash.each do |name, msg|
        %div{:class => "alert alert-#{name == "notice" ? "success" : "danger"}"}
          %a.close{"data-dismiss" => "alert"} Ã—
          = msg
      .row
        .col-sm-12
          = yield
    %footer
      .container
        %p
          &copy; 2015
          = link_to "Bryan Bibat", "http://bryanbibat.net"
    = yield :data_scripts
    = javascript_include_tag "application"
    = yield :scripts
    - if Rails.env == "production"
      = render "layouts/analytics"
