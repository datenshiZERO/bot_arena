%h1= "#{current_user.username}'s profile"

%p
  %strong Level:
  = current_user.current_level
  = xp_display(current_user)

%p
  %strong XP:
  = number_with_delimiter current_user.total_xp
%p
  %strong Gold:
  = number_with_delimiter current_user.credits

%p
  %strong Missions:
  = number_with_delimiter current_user.total_missions

%p
  %strong Kills:
  = number_with_delimiter current_user.total_kills

%p
  %strong Joined at:
  %em= l current_user.created_at.to_date, format: :long

%hr

%p
  = link_to "Edit profile", edit_my_profile_path, class: "btn btn-default btn-lg"
  = link_to "Edit account", edit_user_registration_path, class: "btn btn-default btn-lg"
